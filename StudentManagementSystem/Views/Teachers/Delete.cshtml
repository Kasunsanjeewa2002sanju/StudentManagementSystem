@model StudentManagementSystem.Models.Teacher
@{
	ViewData["Title"] = "Delete Teacher";
}

<h2>Delete Teacher</h2>

<h4>Are you sure you want to delete this?</h4>

<div>
	<dl class="row">
		<dt class="col-sm-2">Teacher Id</dt>
		<dd class="col-sm-10">@Model.TeacherId</dd>
		<dt class="col-sm-2">Name</dt>
		<dd class="col-sm-10">@Model.Name</dd>
		<dt class="col-sm-2">Subject</dt>
		<dd class="col-sm-10">@Model.Subject</dd>
		<dt class="col-sm-2">Email</dt>
		<dd class="col-sm-10">@Model.Email</dd>
		<dt class="col-sm-2">Phone</dt>
		<dd class="col-sm-10">@Model.Phone</dd>
		<dt class="col-sm-2">Hire Date</dt>
		<dd class="col-sm-10">@Model.HireDate.ToString("yyyy-MM-dd")</dd>
	</dl>
</div>

<form asp-action="Delete" method="post">
	<input type="hidden" asp-for="TeacherId" />
	<button type="submit" class="btn btn-danger">Delete</button>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>



