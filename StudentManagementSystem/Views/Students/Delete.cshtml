@model StudentManagementSystem.Models.Student
@{
	ViewData["Title"] = "Delete Student";
}

<h2>Delete Student</h2>

<h4>Are you sure you want to delete this?</h4>

<div>
	<dl class="row">
		<dt class="col-sm-2">Student Id</dt>
		<dd class="col-sm-10">@Model.StudentId</dd>
		<dt class="col-sm-2">Name</dt>
		<dd class="col-sm-10">@Model.Name</dd>
		<dt class="col-sm-2">Age</dt>
		<dd class="col-sm-10">@Model.Age</dd>
		<dt class="col-sm-2">Grade</dt>
		<dd class="col-sm-10">@Model.Grade</dd>
		<dt class="col-sm-2">Email</dt>
		<dd class="col-sm-10">@Model.Email</dd>
		<dt class="col-sm-2">Enrollment Date</dt>
		<dd class="col-sm-10">@Model.EnrollmentDate.ToString("yyyy-MM-dd")</dd>
	</dl>
</div>

<form asp-action="Delete" method="post">
	<input type="hidden" asp-for="StudentId" />
	<button type="submit" class="btn btn-danger">Delete</button>
	<a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>


