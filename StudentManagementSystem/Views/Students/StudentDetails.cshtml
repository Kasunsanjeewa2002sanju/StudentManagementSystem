@model StudentManagementSystem.Models.Student
@{
	ViewData["Title"] = "Student Details";
}

<h2>Student Details</h2>

@if (!string.IsNullOrWhiteSpace(ViewBag.StatusMessage as string))
{
	<div class="alert alert-success">@ViewBag.StatusMessage</div>
}

@if (ViewBag.Deleted == true)
{
	<div class="alert alert-warning">This record has been deleted. Displaying the last known details.</div>
}

<div>
	<dl class="row">
		<dt class="col-sm-2">Student Id</dt>
		<dd class="col-sm-10">@Model.StudentId</dd>
		<dt class="col-sm-2">Name</dt>
		<dd class="col-sm-10">@Model.Name</dd>
		<dt class="col-sm-2">Age</dt>
		<dd class="col-sm-10">@Model.Age</dd>
		<dt class="col-sm-2">Grade</dt>
		<dd class="col-sm-10">@Model.Grade</dd>
		<dt class="col-sm-2">Email</dt>
		<dd class="col-sm-10">@Model.Email</dd>
		<dt class="col-sm-2">Enrollment Date</dt>
		<dd class="col-sm-10">@Model.EnrollmentDate.ToString("yyyy-MM-dd")</dd>
	</dl>
</div>

<div>
	@if (ViewBag.Deleted == true)
	{
		<a asp-action="Index" class="btn btn-secondary">Back to List</a>
	}
	else
	{
		<a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-warning">Edit</a>
		<a asp-action="Delete" asp-route-id="@Model.StudentId" class="btn btn-danger">Delete</a>
		<a asp-action="Index" class="btn btn-secondary">Back to List</a>
	}
</div>



